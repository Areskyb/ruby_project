<h1>Visited Countries</h1>
<section>
<div class="boxes">

  <% for country in @countries %>
  <% if country.visited == 't' %>
  <a href="/visited/<%=country.id%>">
    <div class="country-deck">
        <p class="country-deck-name">
          <%= country.name %>
        </p>
    </div>
  </a>
  <% else %>
  <% end %>
  <% end %>
</div>

</section>

<form class="form-country" action="/new" method="post">

<label for="country_name">Country name: </label>
<input type="text" name="name" id="country_name">
<input type="hidden" name="visited" value="true">
<input type="submit" value="Add a visited country">
</form>
