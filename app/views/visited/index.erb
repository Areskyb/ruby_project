<h1>Visited Countries</h1>
<% for country in @countries %>
  <a href="/visited/<%=country.id%>"><div class="country-deck">
      <p class="country-deck-name"><%=country.name if country.visited == 't'%> </p
  </div>
  </a>

<% end %>


<form class="form-country" action="/visited" method="post">

<label for="country_name">Country name: </label>
<input type="text" name="country-name" id="country_name">

<input type="submit" value="submit">
</form>
