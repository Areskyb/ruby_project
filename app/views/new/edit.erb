<h1><%=@country.name%></h1>

<div class="new-country-index">
  <form class="new-country-index" action="/update" method="post">
    <label for="country_name">Country Name: </label>
    <input type="text" id= "country_name" name="name" value="<%=@country.name%>">
    <br>
    <label for="visited">Is it Visited or To visit?</label><br>
    <input type="radio" id= "visited" name="visited" value="true" required <%= checked="checked" if !@country.visited %> = "checked"> Visited <br>
    <input type="radio" id= "visited" name="visited" value="false" required <%= checked= "checked" if @country.visited %>> To visit <br>
    <input type="submit" value="Apply changes">
    <input type="hidden" name="id" value="<%=@country.id%>">

  </form>
</div>

<iframe width="100%" height="500" src="https://maps.google.com/maps?q=<%=@country.name%>&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
